$('#question-form').remove();
$('#questions-table').append('<%= j render partial: "form_js", locals: { question: question } %>');
$('#new-link').hide();
$(".close").on("click", function() {
  $('#question-form').remove();
  $('#new-link').show();
  $('#flash-messages').empty();
});
$('#flash-messages').html('<%= j render "shared/flash" %>');